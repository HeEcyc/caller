<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnresolvableTag, AndroidElementNotAllowed -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.paxi.cst.R"/>
        <import type="com.paxi.cst.repository.LocaleRepository"/>
        <variable
            name="viewModel"
            type="com.paxi.cst.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_scene_home_fragment"
        android:clipChildren="false">

        <include
            android:id="@+id/bg"
            layout="@layout/app_bg"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:137">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonSound"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.467"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintVertical_bias="0.9041">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/button_sound_off"/>
                <com.paxi.cst.ui.custom.GradientTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.1875"
                    app:layout_constraintVertical_bias="0.8"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="10sp"
                    app:autoSizeMinTextSize="1sp"
                    android:fontFamily="@font/avenir_lt_std_700"
                    android:text="@string/sound"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.467"
            app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintVertical_bias="0.9041">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/button_settings"/>
            <com.paxi.cst.ui.custom.GradientTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.1875"
                app:layout_constraintVertical_bias="0.8"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="10sp"
                app:autoSizeMinTextSize="1sp"
                android:fontFamily="@font/avenir_lt_std_700"
                android:text="@string/settings"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/selectorClosedMarker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:50"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/selectorClosedMarker"
            app:layout_constraintDimensionRatio="360:247"
            android:clipChildren="false">
            <com.paxi.cst.ui.custom.ScalableCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FFFFFF"
                app:scalable_corner_radius="0">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.legacy.widget.Space
                        android:id="@+id/bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="360:50"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@id/bottom"
                        app:layout_constraintDimensionRatio="360:192"
                        app:layout_constraintVertical_bias="0.09"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:adapter="@{viewModel.adapterRV}"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="157:7"
                        app:layout_constraintHeight_percent="0.02834"
                        app:layout_constraintVertical_bias="0.9333"
                        android:src="@drawable/handle"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.paxi.cst.ui.custom.ScalableCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/handleHitBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="189:39"
            app:layout_constraintWidth_percent="0.525"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="selector, navigation"
            app:barrierDirection="bottom"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/barrier"
            app:layout_constraintBottom_toTopOf="@id/apply"
            android:overScrollMode="never"
            android:clipChildren="false"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="360:161">
            <com.paxi.cst.ui.custom.ScalableCardView
                android:id="@+id/buttonApply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="139:40"
                app:layout_constraintHeight_percent="0.25"
                app:cardBackgroundColor="@android:color/transparent"
                app:scale_by="byHeight"
                app:scalable_corner_radius="0.5">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/app_gradient">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="139:20"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_500"
                        android:textAllCaps="true"
                        android:text="@string/apply"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.paxi.cst.ui.custom.ScalableCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>