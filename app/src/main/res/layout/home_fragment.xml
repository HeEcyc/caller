<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.glasserino.caller.ui.custom.GlScalableGlCardGlViewGl.ScaleType"/>
        <import type="com.glasserino.caller.R"/>
        <variable
            name="viewModel"
            type="com.glasserino.caller.ui.home.GlHomeGlViewGlModelGl" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_bg">

        <include
            android:id="@+id/layoutPreset"
            layout="@layout/home_fragment_preset"
            android:visibility="@{viewModel.showTabPreset ? View.VISIBLE : View.GONE}"
            bind:viewModel="@{viewModel}"/>

        <include
            android:id="@+id/layoutCustom"
            layout="@layout/home_fragment_custom"
            android:visibility="@{viewModel.showTabCustom ? View.VISIBLE : View.GONE}"
            bind:viewModel="@{viewModel}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:84">
            <com.glasserino.caller.ui.custom.GlScalableGlCardGlViewGl
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="230:44"
                app:layout_constraintHeight_percent="0.5238"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                scaleType="@{ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.454545f}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_gradient">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="230:29"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="85"
                            android:background="@{viewModel.showTabPreset ? @drawable/tab_bg_85x29 : null}"
                            android:onClick="@{(_) -> viewModel.onTabPresetClick()}">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="56:16"
                                app:layout_constraintHeight_percent="0.551724"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                font="@{viewModel.showTabPreset ? R.font.roboto_bold : R.font.roboto_regular}"
                                android:alpha="@{viewModel.showTabPreset ? 1f : 0.5f}"
                                android:text="@string/preset"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="85"
                            android:background="@{viewModel.showTabCustom ? @drawable/tab_bg_85x29 : null}"
                            android:onClick="@{(_) -> viewModel.onTabCustomClick()}">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="56:16"
                                app:layout_constraintHeight_percent="0.551724"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                font="@{viewModel.showTabCustom ? R.font.roboto_bold : R.font.roboto_regular}"
                                android:alpha="@{viewModel.showTabCustom ? 1f : 0.5f}"
                                android:text="@string/add_yours"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.glasserino.caller.ui.custom.GlScalableGlCardGlViewGl>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>