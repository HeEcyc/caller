<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnresolvableTag, AndroidElementNotAllowed -->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.paxi.cst.R"/>
        <import type="com.paxi.cst.repository.LocaleRepository"/>
        <variable
            name="viewModel"
            type="com.paxi.cst.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F7"
        app:layoutDescription="@xml/motion_scene_home_fragment"
        android:clipChildren="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:162">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonSettings"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.296"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintVertical_bias="0.63"
                android:src="@drawable/button_settings"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonSound"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.296"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintVertical_bias="0.63"
                android:src="@drawable/button_sound_off"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/selectorClosedMarker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:42"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/selectorClosedMarker"
            app:layout_constraintDimensionRatio="360:242"
            android:clipChildren="false">
            <com.paxi.cst.ui.custom.ScalableCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:252"
                app:cardBackgroundColor="#FFFFFF"
                app:scale_by="byHeight"
                app:scalable_corner_radius="0.07">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="360:242">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="360:170"
                            app:layout_constraintVertical_bias="0.3055555"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:adapter="@{viewModel.adapterRV}"/>

                        <com.paxi.cst.ui.custom.ScalableCardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="79:4"
                            app:layout_constraintHeight_percent="0.0165"
                            app:layout_constraintVertical_bias="0.9327731"
                            app:cardElevation="0dp"
                            android:shadowColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.5">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_gradient"/>
                        </com.paxi.cst.ui.custom.ScalableCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.paxi.cst.ui.custom.ScalableCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/handleHitBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="111:36"
            app:layout_constraintWidth_percent="0.308333"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="selector, navigation"
            app:barrierDirection="bottom"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/barrier"
            app:layout_constraintBottom_toTopOf="@id/apply"
            android:overScrollMode="never"
            android:clipChildren="false"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="360:191">
            <com.paxi.cst.ui.custom.ScalableCardView
                android:id="@+id/buttonApply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:53"
                app:layout_constraintHeight_percent="0.277"
                app:cardBackgroundColor="@android:color/transparent"
                app:scale_by="byHeight"
                app:scalable_corner_radius="0.188679">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1F1F1F">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="328:22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_400"
                        android:text="@string/apply"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.paxi.cst.ui.custom.ScalableCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A61F1F1F"
            android:visibility="gone">
            <View
                android:id="@+id/marker"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="301:772"
                app:layout_constraintHorizontal_bias="0"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/marker"
                android:background="#F4F5F7"/>
            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/menuHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/marker"
                android:overScrollMode="never"
                android:scrollbars="none">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/menuSettings"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="269:273"
                        app:layout_constraintWidth_percent="0.89"
                        android:orientation="vertical"
                        android:clipChildren="false">

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="33"/>

                        <com.paxi.cst.ui.custom.ScalableCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="149"
                            app:cardBackgroundColor="@android:color/white"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.05369">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/buttonPower"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="43">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="155:22"
                                        app:layout_constraintHeight_percent="0.5116"
                                        app:layout_constraintHorizontal_bias="0.14"
                                        android:gravity="center_vertical"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="20sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#1F1F1F"
                                        android:fontFamily="@font/roboto_400"
                                        android:text="@string/call_theme"
                                        tools:ignore="TooDeepLayout" />
                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/switchPower"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="2:1"
                                        app:layout_constraintHorizontal_bias="0.9672"
                                        android:thumb="@drawable/switch_thumb"
                                        app:track="@drawable/switch_track"
                                        android:clickable="false"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.legacy.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="10"/>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="43"
                                    android:onClick="@{(_) -> viewModel.onFlashClick()}">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="155:22"
                                        app:layout_constraintHeight_percent="0.5116"
                                        app:layout_constraintHorizontal_bias="0.14"
                                        android:gravity="center_vertical"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="20sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#1F1F1F"
                                        android:fontFamily="@font/roboto_400"
                                        android:text="@string/flash"/>
                                    <androidx.appcompat.widget.SwitchCompat
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="2:1"
                                        app:layout_constraintHorizontal_bias="0.9672"
                                        android:thumb="@drawable/switch_thumb"
                                        app:track="@drawable/switch_track"
                                        android:clickable="false"
                                        android:checked="@{viewModel.isFlashOn}"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.legacy.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="10"/>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="43"
                                    android:onClick="@{(_) -> viewModel.onAccelerometerClick()}">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="155:22"
                                        app:layout_constraintHeight_percent="0.5116"
                                        app:layout_constraintHorizontal_bias="0.14"
                                        android:gravity="center_vertical"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="20sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#1F1F1F"
                                        android:fontFamily="@font/roboto_400"
                                        android:text="@string/accelerometer"/>
                                    <androidx.appcompat.widget.SwitchCompat
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="2:1"
                                        app:layout_constraintHorizontal_bias="0.9672"
                                        android:thumb="@drawable/switch_thumb"
                                        app:track="@drawable/switch_track"
                                        android:clickable="false"
                                        android:checked="@{viewModel.isAccelerometerOn}"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </com.paxi.cst.ui.custom.ScalableCardView>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="15"/>

                        <com.paxi.cst.ui.custom.ScalableCardView
                            android:id="@+id/buttonLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="43"
                            app:cardBackgroundColor="@android:color/white"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.186">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="155:22"
                                    app:layout_constraintHeight_percent="0.5116"
                                    app:layout_constraintHorizontal_bias="0.14"
                                    android:gravity="center_vertical"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#1F1F1F"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="@string/language"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="52:18"
                                    app:layout_constraintHeight_percent="0.4186"
                                    app:layout_constraintHorizontal_bias="0.8433"
                                    android:gravity="center_vertical|end"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="16sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#801F1F1F"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="@{viewModel.localeRepository.localeObservable.displayName ?? LocaleRepository.Locale.ENGLISH.displayName}"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="25:43"
                                    android:src="@drawable/ic_next"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.paxi.cst.ui.custom.ScalableCardView>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="33"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/menuLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="301:28"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:nestedScrollingEnabled="false"
                            android:adapter="@{viewModel.adapterLanguage}"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <Space
                android:id="@+id/menuHeader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="360:120"/>

            <Space
                android:id="@+id/menuHeaderTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="360:72"/>
            
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/menuHeaderTop"
                app:layout_constraintBottom_toBottomOf="@id/menuHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/marker"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="16:48"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerButtonSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/buttonBackSettings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:src="@drawable/button_settings_back"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerButtonLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/buttonBackLanguage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:src="@drawable/button_back" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="16:48"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerTextSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_percent="0.458333"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#1F1F1F"
                        android:fontFamily="@font/roboto_400"
                        android:text="@string/settings"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerTextLanguage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_percent="0.458333"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#1F1F1F"
                        android:fontFamily="@font/roboto_400"
                        android:text="@string/language"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="80:48"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>