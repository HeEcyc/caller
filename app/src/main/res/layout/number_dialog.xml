<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="360:772">

            <com.galaxy.call.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9222"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:scalable_corner_radius="0.12048">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="332:160">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="266:22"
                                app:layout_constraintHeight_percent="0.1375"
                                app:layout_constraintVertical_bias="0.289855"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#000000"
                                android:fontFamily="@font/noto_sans_medium"
                                android:text="@string/choose_a_contact_number"/>

                            <com.galaxy.call.ui.custom.ScalableCardView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintHeight_percent="0.3625"
                                app:layout_constraintVertical_bias="0.8333"
                                app:layout_constraintHorizontal_bias="0.2518"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardElevation="0dp"
                                app:scalable_corner_radius="0.1724">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#353131">
                                    <com.galaxy.call.ui.custom.ScalableCardView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="1:1"
                                        app:layout_constraintHeight_percent="0.9655"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="@android:color/transparent"
                                        app:scalable_corner_radius="0.1607"
                                        tools:ignore="TooDeepLayout">
                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/avatar"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/avatar_placeholder"/>
                                    </com.galaxy.call.ui.custom.ScalableCardView>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.galaxy.call.ui.custom.ScalableCardView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="154:16"
                                app:layout_constraintHeight_percent="0.1"
                                app:layout_constraintHorizontal_bias="0.8146"
                                app:layout_constraintVertical_bias="0.736111"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="1sp"
                                app:autoSizeMaxTextSize="14sp"
                                android:textColor="#000000"
                                android:fontFamily="@font/noto_sans_regular"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="332:104">

                            <com.galaxy.call.ui.custom.ScalableCardView
                                android:id="@+id/buttonCancel"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="100:44"
                                app:layout_constraintWidth_percent="0.3012"
                                app:layout_constraintVertical_bias="0.333"
                                app:layout_constraintHorizontal_bias="0.14224"
                                app:scale_by="byHeight"
                                app:scalable_corner_radius="0.5"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#F9C615">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="68:20"
                                        app:layout_constraintHeight_percent="0.454545"
                                        android:gravity="center"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="18sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#FFFFFF"
                                        android:fontFamily="@font/noto_sans_medium"
                                        android:textAllCaps="true"
                                        android:text="@string/cancel"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.galaxy.call.ui.custom.ScalableCardView>

                            <com.galaxy.call.ui.custom.ScalableCardView
                                android:id="@+id/buttonOk"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="100:44"
                                app:layout_constraintWidth_percent="0.3012"
                                app:layout_constraintVertical_bias="0.333"
                                app:layout_constraintHorizontal_bias="0.85776"
                                app:scale_by="byHeight"
                                app:scalable_corner_radius="0.5"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#F9C615">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="68:20"
                                        app:layout_constraintHeight_percent="0.454545"
                                        android:gravity="center"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="18sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#FFFFFF"
                                        android:fontFamily="@font/noto_sans_medium"
                                        android:textAllCaps="true"
                                        android:text="@string/ok"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.galaxy.call.ui.custom.ScalableCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.galaxy.call.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>