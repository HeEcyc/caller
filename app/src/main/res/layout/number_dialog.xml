<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="360:772">

            <com.fantasia.telecaller.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9222"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:scalable_corner_radius="0.16265">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="332:257.5">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="272:68"
                                app:layout_constraintHeight_percent="0.264"
                                app:layout_constraintVertical_bias="0.3166"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="30sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#0FBAA5"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/choose_a_contact_number"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/buttonClose"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintHeight_percent="0.1048"
                                app:layout_constraintVertical_bias="0.11479"
                                app:layout_constraintHorizontal_bias="0.914754"
                                android:src="@drawable/ic_close"/>

                            <com.fantasia.telecaller.ui.custom.ScalableCardView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintHeight_percent="0.384466"
                                app:layout_constraintVertical_bias="0.93375"
                                app:layout_constraintHorizontal_bias="0.13549"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardElevation="0dp"
                                app:scalable_corner_radius="0.5">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/avatar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/avatar_placeholder"/>
                            </com.fantasia.telecaller.ui.custom.ScalableCardView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="161.43:26"
                                app:layout_constraintHeight_percent="0.10097"
                                app:layout_constraintVertical_bias="0.812095"
                                app:layout_constraintHorizontal_bias="882539"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="1sp"
                                app:autoSizeMaxTextSize="20sp"
                                android:textColor="#2E3938"
                                android:fontFamily="@font/roboto_bold"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="332:98.5">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <com.fantasia.telecaller.ui.custom.ScalableCardView
                                android:id="@+id/buttonCancel"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="116:47"
                                app:layout_constraintWidth_percent="0.349397"
                                app:layout_constraintVertical_bias="0.4174757"
                                app:layout_constraintHorizontal_bias="0.141527777777"
                                app:scale_by="byHeight"
                                app:scalable_corner_radius="0.4893617"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#F84A1F">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="92:23"
                                        app:layout_constraintHeight_percent="0.4893617"
                                        android:gravity="center"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="20sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#FFFFFF"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="@string/cancel"
                                        tools:ignore="TooDeepLayout" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.fantasia.telecaller.ui.custom.ScalableCardView>

                            <com.fantasia.telecaller.ui.custom.ScalableCardView
                                android:id="@+id/buttonOk"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="116:47"
                                app:layout_constraintWidth_percent="0.349397"
                                app:layout_constraintVertical_bias="0.4174757"
                                app:layout_constraintHorizontal_bias="0.858472222223"
                                app:scale_by="byHeight"
                                app:scalable_corner_radius="0.4893617"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#F84A1F">
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="92:23"
                                        app:layout_constraintHeight_percent="0.4893617"
                                        android:gravity="center"
                                        app:autoSizeTextType="uniform"
                                        app:autoSizeMaxTextSize="20sp"
                                        app:autoSizeMinTextSize="1sp"
                                        android:textColor="#FFFFFF"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textAllCaps="true"
                                        android:text="@string/ok"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.fantasia.telecaller.ui.custom.ScalableCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.fantasia.telecaller.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>