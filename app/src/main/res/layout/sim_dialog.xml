<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:772">

            <com.yee.zer.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:474"
                app:layout_constraintWidth_percent="0.9111"
                app:cardBackgroundColor="@android:color/transparent"
                app:scale_by="byWidth"
                app:scalable_corner_radius="0.06">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:clipChildren="false">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="16"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/buttonClose"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintHorizontal_bias="0.947"
                            android:src="@drawable/ic_close"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#1F1F1F"
                        android:fontFamily="@font/roboto_400"
                        android:text="@string/choose_a_sim_card"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="75"
                        android:clipChildren="false">
                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonSim1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="296:75"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.08">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="60:22"
                                    app:layout_constraintHeight_percent="0.29333"
                                    app:layout_constraintHorizontal_bias="0.06779661"
                                    android:gravity="center_vertical|start"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#1F1F1F"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="SIM 1"
                                    tools:ignore="HardcodedText" />
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/selected1"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintHeight_percent="0.32"
                                    app:layout_constraintHorizontal_bias="0.94"
                                    android:src="@drawable/ic_selected"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="14"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="75"
                        android:clipChildren="false">
                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonSim2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="296:75"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.08">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="60:22"
                                    app:layout_constraintHeight_percent="0.29333"
                                    app:layout_constraintHorizontal_bias="0.06779661"
                                    android:gravity="center_vertical|start"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="#1F1F1F"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="SIM 2"
                                    tools:ignore="HardcodedText" />
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/selected2"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintHeight_percent="0.32"
                                    app:layout_constraintHorizontal_bias="0.94"
                                    android:src="@drawable/ic_selected"
                                    android:visibility="gone"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="53">
                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonOk"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="296:53"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.188679">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#1F1F1F">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="296:22"
                                    android:gravity="center"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="@string/ok"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="32"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="53">
                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonCancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="296:53"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.188679">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_gradient">
                                <com.yee.zer.ui.custom.ScalableCardView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="294:51"
                                    app:layout_constraintWidth_percent="0.99324324324"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardElevation="0dp"
                                    app:scale_by="byHeight"
                                    app:scalable_corner_radius="0.17647">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/white"
                                        tools:ignore="TooDeepLayout">
                                        <com.yee.zer.ui.custom.GradientTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHeight_percent="0.43137"
                                            android:gravity="center"
                                            app:autoSizeTextType="uniform"
                                            app:autoSizeMaxTextSize="20sp"
                                            app:autoSizeMinTextSize="1sp"
                                            android:fontFamily="@font/roboto_400"
                                            android:text="@string/cancel"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.yee.zer.ui.custom.ScalableCardView>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.yee.zer.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>