<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:777">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:382"
                app:layout_constraintWidth_percent="0.9111">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_328x382"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clipChildren="false">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="23"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/buttonClose"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintHorizontal_bias="0.93421"
                            android:src="@drawable/ic_close"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="44"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#262D37"
                        android:fontFamily="@font/avenir_lt_std_700"
                        android:text="@string/choose_a_sim_card"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonSim1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="54"
                        android:clipChildren="false">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="143:22"
                            app:layout_constraintHeight_percent="0.4074"
                            app:layout_constraintHorizontal_bias="0.086"
                            android:gravity="center_vertical|start"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#262D37"
                            android:fontFamily="@font/avenir_lt_std_700"
                            android:text="SIM 1"
                            tools:ignore="HardcodedText" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/selected1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="29:21"
                            app:layout_constraintHeight_percent="0.388888888"
                            app:layout_constraintHorizontal_bias="0.9565"
                            android:src="@drawable/ic_selected"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonSim2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="54"
                        android:clipChildren="false">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="143:22"
                            app:layout_constraintHeight_percent="0.4074"
                            app:layout_constraintHorizontal_bias="0.086"
                            android:gravity="center_vertical|start"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#262D37"
                            android:fontFamily="@font/avenir_lt_std_700"
                            android:text="SIM 2"
                            tools:ignore="HardcodedText" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/selected2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="29:21"
                            app:layout_constraintHeight_percent="0.388888888"
                            app:layout_constraintHorizontal_bias="0.9565"
                            android:src="@drawable/ic_selected"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:clipChildren="false">

                        <com.paxi.cst.ui.custom.ScalableCardView
                            android:id="@+id/buttonCancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="99:40"
                            app:layout_constraintHorizontal_bias="0.239"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.5">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_gradient">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintHeight_percent="0.5"
                                    android:gravity="center"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/roboto_500"
                                    android:text="@string/cancel"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.paxi.cst.ui.custom.ScalableCardView>

                        <com.paxi.cst.ui.custom.ScalableCardView
                            android:id="@+id/buttonOk"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="99:40"
                            app:layout_constraintHorizontal_bias="0.761"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.5">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_gradient">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintHeight_percent="0.5"
                                    android:gravity="center"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="14sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/roboto_500"
                                    android:text="@string/ok"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.paxi.cst.ui.custom.ScalableCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>