<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnresolvableTag, AndroidElementNotAllowed -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.vefercal.ler.repository.LocaleRepository.Locale"/>
        <variable
            name="viewModel"
            type="com.vefercal.ler.ui.settings.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipChildren="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:322"
            android:src="@drawable/main_bg"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:570"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="49"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="26">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="320:26"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="24sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_700"
                            android:text="@string/settings"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="34.5"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonPower"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="43">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="228:22"
                            app:layout_constraintHeight_percent="0.5116"
                            app:layout_constraintHorizontal_bias="0.2272727"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/call_theme"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchPower"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="46:23"
                            app:layout_constraintHeight_percent="0.4642857"
                            app:layout_constraintHorizontal_bias="0.93485"
                            android:thumb="@drawable/switch_thumb"
                            app:track="@drawable/switch_track"
                            android:clickable="false"
                            android:background="@android:color/transparent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="43"
                        android:onClick="@{(_) -> viewModel.onFlashClick()}">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="228:22"
                            app:layout_constraintHeight_percent="0.5116"
                            app:layout_constraintHorizontal_bias="0.2272727"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/flash"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="46:23"
                            app:layout_constraintHeight_percent="0.4642857"
                            app:layout_constraintHorizontal_bias="0.93485"
                            android:thumb="@drawable/switch_thumb"
                            app:track="@drawable/switch_track"
                            android:clickable="false"
                            android:checked="@{viewModel.isFlashOn}"
                            android:background="@android:color/transparent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="43"
                        android:onClick="@{(_) -> viewModel.onAccelerometerClick()}">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="228:22"
                            app:layout_constraintHeight_percent="0.5116"
                            app:layout_constraintHorizontal_bias="0.2272727"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/accelerometer"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="46:23"
                            app:layout_constraintHeight_percent="0.4642857"
                            app:layout_constraintHorizontal_bias="0.93485"
                            android:thumb="@drawable/switch_thumb"
                            app:track="@drawable/switch_track"
                            android:clickable="false"
                            android:checked="@{viewModel.isAccelerometerOn}"
                            android:background="@android:color/transparent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="19.5"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="42">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="140:22"
                            app:layout_constraintHeight_percent="0.5238"
                            app:layout_constraintHorizontal_bias="0.1363636"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/application_language"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="140:16"
                            app:layout_constraintHeight_percent="0.38"
                            app:layout_constraintHorizontal_bias="0.81363636"
                            android:gravity="center_vertical|end"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@{viewModel.localeRepository.localeObservable.displayName ?? Locale.ENGLISH.displayName}"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="5:8"
                            app:layout_constraintHeight_percent="0.19"
                            app:layout_constraintHorizontal_bias="0.9183"
                            android:src="@drawable/ic_next"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonShare"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="42">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_share"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="0.357"
                            app:layout_constraintHorizontal_bias="0.086"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="272:22"
                            app:layout_constraintWidth_percent="0.755555"
                            app:layout_constraintHorizontal_bias="0.65909090"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/share"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="42">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_rate_us"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="34:35"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="0.40476"
                            app:layout_constraintHorizontal_bias="0.086"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="272:22"
                            app:layout_constraintWidth_percent="0.755555"
                            app:layout_constraintHorizontal_bias="0.65909090"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/rate_us"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="42">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="13:17"
                            app:layout_constraintHeight_percent="0.40476"
                            app:layout_constraintHorizontal_bias="0.08902"
                            android:src="@drawable/ic_privacy"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="272:22"
                            app:layout_constraintWidth_percent="0.755555"
                            app:layout_constraintHorizontal_bias="0.65909090"
                            android:gravity="center_vertical"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#291C33"
                            android:fontFamily="@font/sf_pro_display_200"
                            android:text="@string/privacy_policy"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="134"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>