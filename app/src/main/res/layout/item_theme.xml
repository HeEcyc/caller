<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.sappy.callthemes.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.sappy.callthemes.ui.home.ThemeAdapter.ThemeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <com.sappy.callthemes.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="159:267"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_WIDTH}"
            scalableCornerRadius="@{0.157f}">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/preview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </com.sappy.callthemes.ui.custom.ScalableCardView>

        <com.sappy.callthemes.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="159:267"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="10dp"
            scaleType="@{ScaleType.BY_WIDTH}"
            scalableCornerRadius="@{0.157f}"
            android:visibility="gone"
            visibleIf="@{item.isDemo}">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
        </com.sappy.callthemes.ui.custom.ScalableCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>