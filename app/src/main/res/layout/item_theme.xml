<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.fantasy.call.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.fantasy.call.ui.home.ThemeAdapter.ThemeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.fantasy.call.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="161:283"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_WIDTH}"
            app:scalable_corner_radius="0.1242236">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E76F51">

                <com.fantasy.call.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="157:279"
                    app:layout_constraintWidth_percent="0.975155"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    app:scale_by="byWidth"
                    app:scalable_corner_radius="0.11464968"
                    visibleIf="@{item.isDemo}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/preview2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                        
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintWidth_percent="0.2866242"
                            app:layout_constraintVertical_bias="0.051282"
                            app:layout_constraintHorizontal_bias="0.92857"
                            android:src="@drawable/ic_selected"/>
                        
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.fantasy.call.ui.custom.ScalableCardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    visibleIf="@{!item.isDemo}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.fantasy.call.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>