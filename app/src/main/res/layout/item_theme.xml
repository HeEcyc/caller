<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.stacky.caller.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.stacky.caller.ui.home.ThemeAdapter.ThemeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <com.stacky.caller.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="155:261"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_WIDTH}"
            scalableCornerRadius="@{0.0645f}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D2E23D">

                <com.stacky.caller.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="145:251"
                    app:layout_constraintWidth_percent="0.93548"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    scaleType="@{ScaleType.BY_WIDTH}"
                    scalableCornerRadius="@{0.03448f}">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/preview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.stacky.caller.ui.custom.ScalableCardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    visibleIf="@{!item.isDemo}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.stacky.caller.ui.custom.ScalableCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>