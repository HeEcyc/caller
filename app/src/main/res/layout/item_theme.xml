<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.glasserino.caller.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.glasserino.caller.ui.home.ThemeAdapter.ThemeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.glasserino.caller.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="159:282"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_WIDTH}"
            scalableCornerRadius="@{0.125786f}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00F1FF">

                <com.glasserino.caller.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="151:274"
                    app:layout_constraintWidth_percent="0.9496855"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_WIDTH}"
                    scalableCornerRadius="@{0.10596f}">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/preview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.glasserino.caller.ui.custom.ScalableCardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="@{item.isDemo ? View.GONE : View.VISIBLE}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.glasserino.caller.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>