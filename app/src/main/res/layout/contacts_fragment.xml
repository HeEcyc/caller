<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.fancy.call.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <import type="com.fancy.call.ui.contacts.ContactsFragment.Mode"/>
        <variable
            name="viewModel"
            type="com.fancy.call.ui.contacts.ContactsViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:77">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/buttonKeyboard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="34:46"
                    app:layout_constraintHeight_percent="0.5974"
                    app:layout_constraintHorizontal_bias="0.049"
                    app:layout_constraintVertical_bias="0.9032258"
                    android:src="@drawable/ic_keyboard"
                    visibleIf="@{(viewModel.mode == Mode.DEFAULT || viewModel.mode == Mode.INTERLOCUTOR_SELECTOR) &amp;&amp; !viewModel.isSearching}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.51948"
                    app:layout_constraintVertical_bias="0.837837837"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:src="@drawable/ic_back"
                    visibleIf="@{viewModel.mode == Mode.CONTACT_SELECTOR || viewModel.isSearching}"
                    android:onClick="@{(_) -> viewModel.onBackClick()}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.636363"
                    app:layout_constraintHorizontal_bias="0.95498"
                    android:src="@drawable/ic_search"
                    visibleIf="@{!viewModel.isSearching}"
                    android:onClick="@{(_) -> viewModel.onSearchClick()}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="202:26"
                    app:layout_constraintHeight_percent="0.33766"
                    app:layout_constraintVertical_bias="0.745"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#124985"
                    android:fontFamily="@font/fira_sans_bold"
                    android:text="@string/contacts"
                    visibleIf="@{!viewModel.isSearching}"/>

                <com.fancy.call.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="258:38"
                    app:layout_constraintHeight_percent="0.4935"
                    app:layout_constraintVertical_bias="0.8205"
                    app:layout_constraintHorizontal_bias="0.843"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.263"
                    visibleIf="@{viewModel.isSearching}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#124985">
                        <com.fancy.call.ui.custom.ScalableCardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="254:34"
                            app:layout_constraintHeight_percent="0.8947"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.235294"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/white">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="198:16"
                                    app:layout_constraintHeight_percent="0.470588"
                                    app:layout_constraintHorizontal_bias="0.25"
                                    android:gravity="center_vertical"
                                    android:background="@null"
                                    android:textCursorDrawable="@drawable/text_cursor"
                                    android:textSize="14sp"
                                    android:textColor="#124985"
                                    android:textColorHint="#80124985"
                                    android:fontFamily="@font/fira_sans_bold"
                                    android:singleLine="true"
                                    android:inputType="text"
                                    android:text="@={viewModel.searchQuery}"
                                    android:hint="@string/type_something"
                                    tools:ignore="Autofill,LabelFor" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintHeight_percent="0.4117647"
                                    app:layout_constraintHorizontal_bias="0.941666666"
                                    android:src="@drawable/ic_clear"
                                    visibleIf="@{viewModel.searchQuery.length() > 0}"
                                    android:onClick='@{(_) -> viewModel.onClearClick()}'/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.fancy.call.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.fancy.call.ui.custom.ScalableCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:overScrollMode="never">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="360:34"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:adapter="@{viewModel.adapterContacts}"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:105"
                visibleIf="@{viewModel.mode == Mode.CONTACT_SELECTOR}">

                <com.fancy.call.ui.custom.ScalableCardView
                    android:id="@+id/buttonApplyToSelected"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="157:55"
                    app:layout_constraintHeight_percent="0.5238"
                    app:layout_constraintHorizontal_bias="0.0788"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.4363636">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF3829">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="117:16"
                            app:layout_constraintHeight_percent="0.2909090"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#007AFF"
                            android:fontFamily="@font/fira_sans_bold"
                            android:text="@string/apply_to_selected"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.fancy.call.ui.custom.ScalableCardView>

                <com.fancy.call.ui.custom.ScalableCardView
                    android:id="@+id/buttonApply"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="157:55"
                    app:layout_constraintHeight_percent="0.5238"
                    app:layout_constraintHorizontal_bias="0.9212"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.4363636">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF3829">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="117:16"
                            app:layout_constraintHeight_percent="0.2909090"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#007AFF"
                            android:fontFamily="@font/fira_sans_bold"
                            android:text="@string/apply_to_all"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.fancy.call.ui.custom.ScalableCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>