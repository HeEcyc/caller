<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.galaxy.call.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <import type="com.galaxy.call.ui.contacts.ContactsFragment.Mode"/>
        <variable
            name="viewModel"
            type="com.galaxy.call.ui.contacts.ContactsViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#060C2D">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:79">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/buttonKeyboard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="45:57"
                    app:layout_constraintHeight_percent="0.7215"
                    app:layout_constraintHorizontal_bias="0.080857"
                    android:src="@mipmap/ic_keyboard"
                    visibleIf="@{(viewModel.mode == Mode.DEFAULT || viewModel.mode == Mode.INTERLOCUTOR_SELECTOR) &amp;&amp; !viewModel.isSearching}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.6075949"
                    app:layout_constraintVertical_bias="0.87"
                    app:layout_constraintHorizontal_bias="0.076923"
                    android:src="@mipmap/ic_back"
                    visibleIf="@{viewModel.mode == Mode.CONTACT_SELECTOR || viewModel.isSearching}"
                    android:onClick="@{(_) -> viewModel.onBackClick()}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.5316"
                    app:layout_constraintVertical_bias="0.783783783"
                    app:layout_constraintHorizontal_bias="0.918"
                    android:src="@mipmap/ic_search"
                    visibleIf="@{!viewModel.isSearching}"
                    android:onClick="@{(_) -> viewModel.onSearchClick()}"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="182:26"
                    app:layout_constraintHeight_percent="0.329"
                    app:layout_constraintVertical_bias="0.698"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/contacts"
                    visibleIf="@{!viewModel.isSearching}"/>

                <com.galaxy.call.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="241:42"
                    app:layout_constraintHeight_percent="0.53"
                    app:layout_constraintVertical_bias="0.810810810"
                    app:layout_constraintHorizontal_bias="0.747899"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.42857"
                    visibleIf="@{viewModel.isSearching}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A1FFFFFF">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="163:16"
                            app:layout_constraintHeight_percent="0.38095"
                            app:layout_constraintHorizontal_bias="0.25641"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#80FFFFFF"
                            android:fontFamily="@font/roboto_regular"
                            android:singleLine="true"
                            android:inputType="text"
                            android:text="@={viewModel.searchQuery}"
                            android:hint="@string/type_something"
                            tools:ignore="Autofill,LabelFor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintHeight_percent="0.42857"
                            app:layout_constraintHorizontal_bias="0.9103139"
                            android:src="@drawable/ic_clear"
                            visibleIf="@{viewModel.searchQuery.length() > 0}"
                            android:onClick='@{(_) -> viewModel.onClearClick()}'/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.galaxy.call.ui.custom.ScalableCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:adapter="@{viewModel.adapterContacts}"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:99"
                visibleIf="@{viewModel.mode == Mode.CONTACT_SELECTOR}">

                <com.galaxy.call.ui.custom.ScalableCardView
                    android:id="@+id/buttonApplyToSelected"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="150:69"
                    app:layout_constraintHeight_percent="0.696969"
                    app:layout_constraintHorizontal_bias="0.095238"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.43478">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="103:52"
                            app:layout_constraintHeight_percent="0.7536"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="22sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#060C2D"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/apply_to_selected"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.galaxy.call.ui.custom.ScalableCardView>

                <com.galaxy.call.ui.custom.ScalableCardView
                    android:id="@+id/buttonApply"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="150:69"
                    app:layout_constraintHeight_percent="0.696969"
                    app:layout_constraintHorizontal_bias="0.904762"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:scale_by="byHeight"
                    app:scalable_corner_radius="0.43478">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="103:52"
                            app:layout_constraintHeight_percent="0.7536"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="22sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#060C2D"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/apply_to_all"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.galaxy.call.ui.custom.ScalableCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>