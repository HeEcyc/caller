<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.glass.call.ui.custom.ScalableCardView.ScaleType"/>
        <import type="com.glass.call.R"/>
        <variable
            name="viewModel"
            type="com.glass.call.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false">
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="360:198"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipChildren="false">
                    
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="14"/>
                    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPreset1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="159"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:adapter="@{viewModel.adapterPreset1}"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="14"/>
                    
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="159"
                        android:orientation="vertical"
                        android:clipChildren="false">
                        
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:visibility="@{viewModel.hasAllPermissions ? View.GONE : View.VISIBLE}">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="159:127"
                                android:clipChildren="false">

                                <com.glass.call.ui.custom.ScalableCardView
                                    android:id="@+id/buttonPermission"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="159:127"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardElevation="0dp"
                                    scaleType="@{ScaleType.BY_HEIGHT}"
                                    scalableCornerRadius="@{0.15748f}">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:ignore="TooDeepLayout">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/grey_gradient"/>

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintDimensionRatio="6:10"
                                            app:layout_constraintHeight_percent="0.07874"
                                            app:layout_constraintHorizontal_bias="0.92"
                                            app:layout_constraintVertical_bias="0.35897"
                                            android:src="@mipmap/ic_next_white"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintDimensionRatio="137:37"
                                            app:layout_constraintHeight_percent="0.29"
                                            app:layout_constraintVertical_bias="0.7777777"
                                            app:autoSizeTextType="uniform"
                                            app:autoSizeMaxTextSize="10sp"
                                            app:autoSizeMinTextSize="1sp"
                                            android:textColor="#FFFFFF"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="@string/give_permissions_needed_to_show_the_call_screen"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.glass.call.ui.custom.ScalableCardView>

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/marker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.488"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintBottom_toBottomOf="@id/marker"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="82:81"
                                    app:layout_constraintWidth_percent="0.5157"
                                    app:layout_constraintHorizontal_bias="0.233766"
                                    android:src="@mipmap/img_chack_mark"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.hasAllPermissions ? View.GONE : View.VISIBLE}">
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="159:14"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPreset2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:adapter="@{viewModel.adapterPreset2}"/>
                        
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="14"/>
                    
                </androidx.appcompat.widget.LinearLayoutCompat>
                
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:165">
            <com.glass.call.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="291:44"
                app:layout_constraintHeight_percent="0.2666666"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                scaleType="@{ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.454545f}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_gradient">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="291:29"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="29"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="53"
                            android:background="@{viewModel.showTabNew ? @drawable/tab_bg_53x29 : null}"
                            android:onClick="@{(_) -> viewModel.onTabNewClick()}">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="28:16"
                                app:layout_constraintHeight_percent="0.551724"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                font="@{viewModel.showTabNew ? R.font.roboto_bold : R.font.roboto_regular}"
                                android:alpha="@{viewModel.showTabNew ? 1f : 0.5f}"
                                android:text="@string/new_"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="43"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="53"
                            android:background="@{viewModel.showTabTop ? @drawable/tab_bg_53x29 : null}"
                            android:onClick="@{(_) -> viewModel.onTabTopClick()}">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="28:16"
                                app:layout_constraintHeight_percent="0.551724"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                font="@{viewModel.showTabTop ? R.font.roboto_bold : R.font.roboto_regular}"
                                android:alpha="@{viewModel.showTabTop ? 1f : 0.5f}"
                                android:text="@string/top"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="39"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="53"
                            android:background="@{viewModel.showTabAll ? @drawable/tab_bg_53x29 : null}"
                            android:onClick="@{(_) -> viewModel.onTabAllClick()}">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="25:16"
                                app:layout_constraintHeight_percent="0.551724"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                font="@{viewModel.showTabAll ? R.font.roboto_bold : R.font.roboto_regular}"
                                android:alpha="@{viewModel.showTabAll ? 1f : 0.5f}"
                                android:text="@string/all"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.glass.call.ui.custom.ScalableCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>