<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.vefercal.ler.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <import type="com.vefercal.ler.ui.contacts.ContactsActivity.Mode"/>
        <import type="com.vefercal.ler.R"/>
        <variable
            name="viewModel"
            type="com.vefercal.ler.ui.contacts.ContactsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="#8200FF">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:94">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="3400:3457"
                        app:layout_constraintHeight_percent="0.36776"
                        app:layout_constraintHorizontal_bias="0.046"
                        app:layout_constraintVertical_bias="0.84"
                        android:src="@drawable/ic_back"
                        android:onClick="@{(_) -> viewModel.onBackClick()}"/>

                    <com.vefercal.ler.ui.custom.ScalableCardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="240:50"
                        app:layout_constraintHeight_percent="0.556818181"
                        app:layout_constraintHorizontal_bias="0.737864"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:scale_by="byHeight"
                        app:scalable_corner_radius="0.5">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF">
                            <com.vefercal.ler.ui.custom.ScalableCardView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="238:48"
                                app:layout_constraintHeight_percent="0.96"
                                app:scale_by="byHeight"
                                app:scalable_corner_radius="0.5"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#9526FF">

                                    <EditText
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="186:20"
                                        app:layout_constraintHeight_percent="0.41666666"
                                        app:layout_constraintHorizontal_bias="0.25"
                                        android:gravity="center_vertical"
                                        android:background="@null"
                                        android:textCursorDrawable="@drawable/text_cursor"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF"
                                        android:textColorHint="#80FFFFFF"
                                        font="@{viewModel.searchQuery.length() == 0 ? R.font.poppins_400 : R.font.poppins_500}"
                                        android:singleLine="true"
                                        android:inputType="text"
                                        android:text="@={viewModel.searchQuery}"
                                        android:hint="@string/write_here_to_search"
                                        tools:ignore="Autofill,LabelFor,TooDeepLayout" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintDimensionRatio="1:1"
                                        app:layout_constraintHeight_percent="0.25"
                                        app:layout_constraintHorizontal_bias="0.94"
                                        android:src="@drawable/ic_clear"
                                        visibleIf="@{viewModel.searchQuery.length() > 0}"
                                        android:onClick='@{(_) -> viewModel.onClearClick()}'/>

                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.vefercal.ler.ui.custom.ScalableCardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.vefercal.ler.ui.custom.ScalableCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.legacy.widget.Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="360:38"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="3"
                            android:orientation="vertical"
                            android:scrollbars="none"
                            android:overScrollMode="never"
                            android:adapter="@{viewModel.adapterContacts}"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.core.widget.NestedScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:117"
                    visibleIf="@{viewModel.mode == Mode.CONTACT_SELECTOR}">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonApply"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="126:60"
                        app:layout_constraintHeight_percent="0.51282"
                        app:layout_constraintHorizontal_bias="0.1666666">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/button_bg_126x60"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="115:40"
                            app:layout_constraintHeight_percent="0.666666"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/poppins_500"
                            android:text="@string/apply_to_selected"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/buttonCancel"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="126:60"
                        app:layout_constraintHeight_percent="0.51282"
                        app:layout_constraintHorizontal_bias="0.8333334">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/button_bg_126x60"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="115:40"
                            app:layout_constraintHeight_percent="0.666666"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="24sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/poppins_500"
                            android:text="@string/cancel"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>