<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.yee.zer.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.yee.zer.ui.home.ThemeAdapterHome.Item" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <com.yee.zer.ui.custom.ScalableCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="70:121"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:scale_by="byWidth"
            app:scalable_corner_radius="0.057"
            android:alpha="0.5">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/preview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </com.yee.zer.ui.custom.ScalableCardView>

        <com.yee.zer.ui.custom.ScalableCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="70:121"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:scale_by="byWidth"
            app:scalable_corner_radius="0.057"
            android:alpha="@{item.isSelected ? 1f : 0f}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_orange">
                <com.yee.zer.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="66:117"
                    app:layout_constraintHeight_percent="0.966942"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    app:scale_by="byWidth"
                    app:scalable_corner_radius="0.030303">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/preview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.yee.zer.ui.custom.ScalableCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.yee.zer.ui.custom.ScalableCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>