<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:772"
            android:clipChildren="false">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:84"
                app:layout_constraintWidth_percent="0.9111"
                app:layout_constraintVertical_bias="0.08"
                android:gravity="center_vertical|start"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeMinTextSize="1sp"
                android:textColor="#243C68"
                android:fontFamily="@font/roboto_700"
                android:text="@string/allow_the_necessary_permissions_to_turn_on_the_call_screen"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:24"
                app:layout_constraintWidth_percent="0.9111"
                app:layout_constraintVertical_bias="0.2433"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="1sp"
                android:textColor="#243C68"
                android:fontFamily="@font/roboto_400"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="22559:33600"
                app:layout_constraintWidth_percent="0.6266"
                app:layout_constraintVertical_bias="0.5688"
                android:src="@mipmap/img_permission"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="54:10"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintVertical_bias="0.84"
                android:src="@drawable/ic_page_2"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonYes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="156:43"
                app:layout_constraintWidth_percent="0.4333"
                app:layout_constraintVertical_bias="0.8587"
                app:layout_constraintHorizontal_bias="0.92"
                android:background="@drawable/button_156x43">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="156:24"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#243C68"
                    android:fontFamily="@font/roboto_700"
                    android:text="@string/ok"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonNo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="156:43"
                app:layout_constraintWidth_percent="0.4333"
                app:layout_constraintVertical_bias="0.945"
                app:layout_constraintHorizontal_bias="0.92">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="156:24"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#243C68"
                    android:fontFamily="@font/roboto_700"
                    android:text="@string/cancel"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
    
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>