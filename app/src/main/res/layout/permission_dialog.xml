<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:772"
            android:clipChildren="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="300:385"
                app:layout_constraintWidth_percent="0.8333">
                
                <com.pecall.poscreen.ui.custom.ScalableCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="300:297"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{com.delice.cscreen.ui.custom.ScalableCardView.ScaleType.BY_WIDTH}"
                    scalableCornerRadius="@{0.0666666f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#9CD9FC">
    
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/buttonClose"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintWidth_percent="0.0895666666"
                            app:layout_constraintHorizontal_bias="0.9446"
                            app:layout_constraintVertical_bias="0.0559"
                            android:src="@drawable/ic_close"/>
    
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="260:66"
                            app:layout_constraintWidth_percent="0.8666666"
                            app:layout_constraintVertical_bias="0.337"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/comfortaa_700"
                            android:text="@string/allow_the_necessary_permissions_to_turn_on_the_call_screen"/>
    
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textDescription"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="260:16"
                            app:layout_constraintWidth_percent="0.8666666"
                            app:layout_constraintVertical_bias="0.58"
                            android:gravity="center_horizontal"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/comfortaa_700"/>
    
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/buttonYes"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="120:47"
                            app:layout_constraintWidth_percent="0.4077"
                            app:layout_constraintVertical_bias="0.84"
                            app:layout_constraintHorizontal_bias="0.88888888"
                            android:background="@drawable/button_120x47">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="122:22"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/comfortaa_700"
                                android:text="@string/ok"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
    
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/buttonNo"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="120:47"
                            app:layout_constraintWidth_percent="0.4077"
                            app:layout_constraintVertical_bias="0.84"
                            app:layout_constraintHorizontal_bias="0.11111112"
                            android:background="@drawable/button_120x47">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="122:22"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="20sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/comfortaa_700"
                                android:text="@string/cancel"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
    
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.pecall.poscreen.ui.custom.ScalableCardView>
                
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="300:156"
                    android:src="@mipmap/img_permission"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>