<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:772">

            <com.galaxy.call.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="340:371"
                app:layout_constraintWidth_percent="0.94444"
                app:scale_by="byWidth"
                app:scalable_corner_radius="0.12647"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.394"
                        app:layout_constraintVertical_bias="0.075949"
                        android:src="@mipmap/img_permission"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/buttonClose"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="13.72:13.71"
                        app:layout_constraintWidth_percent="0.04035294"
                        app:layout_constraintVertical_bias="0.0843596"
                        app:layout_constraintHorizontal_bias="0.9076"
                        android:src="@drawable/ic_close"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="316:44"
                        app:layout_constraintWidth_percent="0.9294"
                        app:layout_constraintVertical_bias="0.52599"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#353131"
                        android:fontFamily="@font/noto_sans_medium"
                        android:text="@string/give_permissions_needed_to_show_the_call_screen"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textDescription"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="299:41"
                        app:layout_constraintWidth_percent="0.83055555"
                        app:layout_constraintVertical_bias="0.7151515"
                        android:gravity="center_horizontal"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#353131"
                        android:fontFamily="@font/noto_sans_regular"/>

                    <com.galaxy.call.ui.custom.ScalableCardView
                        android:id="@+id/buttonNo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="100:44"
                        app:layout_constraintWidth_percent="0.27777777"
                        app:layout_constraintVertical_bias="0.908"
                        app:layout_constraintHorizontal_bias="0.175"
                        app:scale_by="byHeight"
                        app:scalable_corner_radius="0.5"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F9C615">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="68:20"
                                app:layout_constraintHeight_percent="0.454545"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="18sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textAllCaps="true"
                                android:text="@string/cancel"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.galaxy.call.ui.custom.ScalableCardView>

                    <com.galaxy.call.ui.custom.ScalableCardView
                        android:id="@+id/buttonYes"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="100:44"
                        app:layout_constraintWidth_percent="0.27777777"
                        app:layout_constraintVertical_bias="0.908"
                        app:layout_constraintHorizontal_bias="0.825"
                        app:scale_by="byHeight"
                        app:scalable_corner_radius="0.5"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F9C615">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="68:20"
                                app:layout_constraintHeight_percent="0.454545"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="18sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/noto_sans_medium"
                                android:textAllCaps="true"
                                android:text="@string/ok"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.galaxy.call.ui.custom.ScalableCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.galaxy.call.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>