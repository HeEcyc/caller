<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:772"
            android:clipChildren="false">

            <com.yee.zer.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:558"
                app:layout_constraintWidth_percent="0.9111"
                app:cardBackgroundColor="@android:color/transparent"
                app:scale_by="byWidth"
                app:scalable_corner_radius="0.06"
                android:clipChildren="false">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:clipChildren="false">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="296:558"
                        android:orientation="vertical"
                        android:clipChildren="false">

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="24">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/buttonClose"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                android:src="@drawable/ic_close"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="181"
                            android:src="@mipmap/img_permission"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="66"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#1F1F1F"
                            android:fontFamily="@font/roboto_400"
                            android:text="@string/allow_the_necessary_permissions_to_turn_on_the_call_screen"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textDescription"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="54"
                            android:gravity="center_horizontal"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="16sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#1F1F1F"
                            android:fontFamily="@font/roboto_400"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"/>

                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonYes"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="53"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.188679">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#1F1F1F">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="296:22"
                                    android:gravity="center"
                                    app:autoSizeTextType="uniform"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="1sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/roboto_400"
                                    android:text="@string/ok"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="32"/>

                        <com.yee.zer.ui.custom.ScalableCardView
                            android:id="@+id/buttonNo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="53"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:scale_by="byHeight"
                            app:scalable_corner_radius="0.188679">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_gradient">
                                <com.yee.zer.ui.custom.ScalableCardView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="294:51"
                                    app:layout_constraintWidth_percent="0.99324324324"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardElevation="0dp"
                                    app:scale_by="byHeight"
                                    app:scalable_corner_radius="0.17647">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/white"
                                        tools:ignore="TooDeepLayout">
                                        <com.yee.zer.ui.custom.GradientTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintHeight_percent="0.43137"
                                            android:gravity="center"
                                            app:autoSizeTextType="uniform"
                                            app:autoSizeMaxTextSize="20sp"
                                            app:autoSizeMinTextSize="1sp"
                                            android:fontFamily="@font/roboto_400"
                                            android:text="@string/cancel"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.yee.zer.ui.custom.ScalableCardView>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.yee.zer.ui.custom.ScalableCardView>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.yee.zer.ui.custom.ScalableCardView>
    
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>