<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.callerafter.lovelycall.model.theme.VideoTheme"/>
        <variable
            name="viewModel"
            type="com.callerafter.lovelycall.ui.contact.ContactViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/themeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/themeVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false"
            android:visibility="@{viewModel.theme instanceof VideoTheme ? View.VISIBLE : View.GONE, default = gone}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="360:54">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.740740740"
                app:layout_constraintHorizontal_bias="0.04375"
                android:src="@drawable/ic_back"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonEdit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.740740740"
                app:layout_constraintHorizontal_bias="0.95625"
                android:src="@drawable/ic_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/midPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topPanel"
            app:layout_constraintDimensionRatio="360:166">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contactThumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.6265"
                app:layout_constraintVertical_bias="0.29"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="6dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="332:24"
                app:layout_constraintHeight_percent="0.14458"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="24sp"
                app:autoSizeMinTextSize="1sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_regular"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:text="@{viewModel.contact.contactName}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shadowRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            adapter="@{viewModel.adapter}"
            android:visibility="invisible"
            android:clickable="false"/>

        <Space
            android:id="@+id/shadowRecyclerHeight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/shadowRecycler"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/recyclerHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="midPanel, shadowRecyclerHeight"
            app:barrierDirection="bottom"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerHeight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            adapter="@{viewModel.adapter}"
            android:background="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>