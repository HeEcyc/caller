<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.maxios.maxcall.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="viewModel"
            type="com.maxios.maxcall.ui.contact.ContactViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="360:62">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.3548"
                    app:layout_constraintHorizontal_bias="0.04142"
                    app:layout_constraintVertical_bias="0.75"
                    android:src="@mipmap/ic_back"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="119:22"
                    app:layout_constraintHeight_percent="0.3548"
                    app:layout_constraintVertical_bias="0.75"
                    app:layout_constraintHorizontal_bias="0.9419"
                    android:stateListAnimator="@null"
                    android:background="@drawable/orange_button_fragment_contact"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="@color/orange_button_text_color"
                    android:fontFamily="@font/roboto_bold"
                    android:textAllCaps="false"
                    android:text="@string/edit"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="332:374"
                        app:layout_constraintWidth_percent="0.9222"
                        android:orientation="vertical">

                        <android.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"/>

                        <com.maxios.maxcall.ui.custom.ScalableCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="249"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            scaleType="@{ScaleType.BY_HEIGHT}"
                            scalableCornerRadius="@{0.04016f}">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/themePreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                        </com.maxios.maxcall.ui.custom.ScalableCardView>

                        <android.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="65">

                            <com.maxios.maxcall.ui.custom.ScalableCardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                scalableCornerRadius="@{0.5f}">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/contactPicture"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"/>
                            </com.maxios.maxcall.ui.custom.ScalableCardView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="247:24"
                                app:layout_constraintHeight_percent="0.36923"
                                android:gravity="center_vertical"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMaxTextSize="16sp"
                                app:autoSizeMinTextSize="1sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@{viewModel.contact.contactName ?? viewModel.contact.contactNumber}"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <android.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    adapter="@{viewModel.adapter}"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>